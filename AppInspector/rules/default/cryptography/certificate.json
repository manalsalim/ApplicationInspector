      {
        "pattern": "PKCS|PaddingMode|SubjectIdentifier|Certificate",
        "type": "regex",
        "scopes": [ "code" ],
        "confidence": "high",
        "modifiers": [ "i" ],
        "_comment": ""
      }
    ]
  },
